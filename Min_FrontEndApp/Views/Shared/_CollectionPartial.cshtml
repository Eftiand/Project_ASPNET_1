@using Min_FrontEndApp.Models.ViewModels;
@model HomeViewModel


<section class="collection-grid">
    <div class="container">
        <div class="title">Featured Products</div>
        <div class="item-collection">
            @{
                for (int i = 0; i < 4; i++)
                {
                    <partial name ="_CollectionItemPartial" model="@Model.Featured.ElementAt(i)"/>
                }
            }
        </div>
    </div>
</section>


<section class="collection-grid">
    <div class="container">
        <div class="title">New Products</div>
        <div class="item-collection">
            @{
                for (int i = 0; i < 4; i++)
                {
                    <partial name ="_CollectionItemPartial" model="@Model.New.ElementAt(i)"/>
                }
            } 
        </div>
    </div>
</section>


<section class="collection-grid">
    <div class="container">
        <div class="title">Popular Products</div>
        <div class="item-collection">
            @{
                for (int i = 0; i < 4; i++)
                {
                    <partial name="_CollectionItemPartial" model="@Model.Popular.ElementAt(i)"/>
                }
            }
        </div>
    </div>
</section>