@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Min_FrontEndApp.Models.DTO.Product


<div class="item" id="@Model.Id">
        <div class="image-section">
            <img src="@Model.ImageUrl" alt=""/>
            <div class="menu">
              <div class="icons">
                  <button class="link"><i class="fa-regular fa-code-compare"></i></button>
                  <button class="link"><i class="fa-regular fa-heart"></i></button>
                  <button class="link"><i class="fa-regular fa-bag-shopping"></i></button>
              </div>

              <a asp-controller="Products" asp-action="Detail" asp-route-id="@Model.Id" type="button" class="btn-theme">QUICK VIEW</a>

            </div>
        </div>

        <div class="body-section">
            <div class="name">@Model.Name</div>
            
            <partial name ="_StarRatingPartial" model="Model.StarRating"/>

            <div class="price">@Model.Price</div>
        </div>
</div>
